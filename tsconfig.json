{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"@/*": ["src copy/*"]
		}
	},
	"include": [
		"src copy/**/*.ts",
		"src copy/**/*.d.ts",
		"src copy/**/*.tsx",
		"src copy/**/*.vue"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
